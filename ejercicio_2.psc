	perimetro=0
	area=0
	Escribir "Dime la base de su rectángulo"
	Leer base
	Escribir "Dime la altura de su rectángulo"
	Leer altura
	perimetro=base *2+altura*2
	area= base*altura
	Escribir "El perímetro es ", perimetro
	Escribir "El área es ", area
